@using ArizaKaydi.Models
@model RoleViewModel
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewData["Title"] = "Kullanıcı Tipi Seçimi";
}

<div class="container">
	<div class="row justify-content-center mt-5">
		<div class="col-md-6 text-center">
			<h2 class="mb-4">Yapmak istediğiniz işlemi seçiniz.</h2>
			<div class="d-grid gap-4">
				<a asp-controller="User" asp-action="Index" class="btn btn-primary btn-lg" style="border-color:white !important">
					<i class="fas fa-user-graduate"></i> Mobil Kullanıcı Girişi
				</a>
				<a asp-controller="User" asp-action="AssignRole" class="btn btn-primary btn-lg" style="border-color:white !important">
					<i class="fas fa-user-tie"></i> Admin Panel Rol Atama
				</a>
				<a asp-controller="User" asp-action="AddNewRole" class="btn btn-primary btn-lg" style="border-color:white !important">
					<i class="fas fa-user-tie"></i> Rol İşlemleri
				</a>
				
			</div>
		</div>
	</div>
</div>


@section Scripts {
	<script src="https://kit.fontawesome.com/a076d05399.js"></script>
}
