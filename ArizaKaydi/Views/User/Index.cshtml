@using EntityLayer.Concrete
@model List<user>
@{

	Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
	<div class="col">
		<div class="card bg-default shadow">
			<div class="card-header bg-transparent border-0">
				<h3 class="text-white mb-0">Kullanıcı Listesi</h3>
			</div>
			<div class="table-responsive">
				<table class="table align-items-center table-dark table-flush">
					<thead class="thead-dark">
						<tr>
							<th scope="col" class="sort">#</th>
							<th scope="col" class="sort" data-sort="name">Kullanıcı Adı</th>
							<th scope="col">Düzenle</th>
							<th scope="col">Sil</th>
						</tr>
					</thead>
					<tbody class="list">
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.Id</td>
								<td scope="row">
									<div class="media align-items-center">
										<div class="media-body">
											<span class="name mb-0 text-sm">@item.UserName</span>
										</div>
									</div>
								</td>
								<td><a href="/User/EditUser/@item.Id" class="btn btn-outline-success">Düzenle</a></td>
								<td><a href="/User/RemoveUser/@item.Id" class="btn btn-outline-warning">Sil</a></td>
							</tr>
						}
					</tbody>
				</table>

			</div>
		</div>
	</div>
</div>
<br />
<a href="/User/AddUser/" class="btn btn-info"> Yeni Kullanıcı Tanımla</a>