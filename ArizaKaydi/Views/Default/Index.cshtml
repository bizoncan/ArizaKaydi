@using EntityLayer.Concrete
@using ArizaKaydi.Models
@model MachinePartViewModel
@{

	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
	<div class="col">
		<div class="card bg-default shadow">
			<div class="card-header bg-transparent border-0">
				<h3 class="text-white mb-0">Arıza Kayıt Sistemi</h3>
			</div>
			<div class="table-responsive">
				<table class="table align-items-center table-dark table-flush">
					<thead class="thead-dark">
						<tr>
							<th scope="col" class="sort">#</th>
							<th scope="col" class="sort" data-sort="name">Makine Adı</th>
							<!-- <th scope="col">Arıza Kayıtları</th> -->
							<th scope="col">Düzenle</th>
							<th scope="col">Sil</th>
						</tr>
					</thead>
					<tbody class="list">
						@foreach (var item in Model.machines)
						{
							<tr>
								<td>@item.id</td>
								<td scope="row">
									<div class="media align-items-center">
										<a href="#" class="avatar rounded-circle mr-3">
											<img alt="Image placeholder" src="@item.imgURL">
										</a>
										<div class="media-body">
											<span class="name mb-0 text-sm">@item.name</span>
										</div>
									</div>
								</td>

								<td><a href="/Default/EditMachine/@item.id" class="btn btn-outline-success">Düzenle</a></td>
								<td><a href="/Default/RemoveMachine/@item.id" class="btn btn-outline-warning">Sil</a></td>
							</tr>
						}
					</tbody>
				</table>

			</div>
		</div>
	</div>
</div>
<br />
<a href="/Default/AddMachine/" class="btn btn-info"> Yeni Makine Ekle</a>
