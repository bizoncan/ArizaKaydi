@using EntityLayer.Concrete
@model workOrder

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card-header border-0">
	<h3 class="mb-0">İş Emri Detayları</h3>
</div>
<br />

<div class="table-responsive">
	<table class="table table-bordered">
		<tbody>
			<tr>
				<th scope="row">ID</th>
				<td>@Model.id</td>
			</tr>
			<tr>
				<th scope="row">Makine</th>
				<td>@(Model?.machine?.name ?? "Makine bilgisi yok.") </td>
			</tr>
			<tr>
				<th scope="row">Makine Parçası</th>
				<td>@(Model?.machinePart?.name ?? "Makine parçası bilgisi yok.")</td>
			</tr>
			<tr>
				<th scope="row">İşi Alan</th>
				<td>@(Model.userI?.UserName?? "Daha iş alınmadı")</td>
			</tr>
			<tr>
				<th scope="row">İş Emri</th>
				<td>@Model.title</td>
			</tr>
			<tr>
				<th scope="row">İş Emri Açıklama</th>
				<td>@Model.desc</td>
			</tr>
			<tr>
				<th scope="row">İş emri başlangıç tarihi</th>
				<td>@(Model?.workOrderStartDate?.ToString("dd-MM-yyyy HH:mm:ss") ?? "Başlangıç tarihi bilgisi yok.")</td>
			</tr>
			<tr>
				<th scope="row">İş emri tamamlama tarihi</th>
				<td>@(Model?.workOrderEndDate?.ToString("dd-MM-yyyy HH:mm:ss") ?? "Tamamlama tarihi bilgisi yok.")</td>
			</tr>
		</tbody>
	</table>
</div>

<div class="d-flex justify-content-center mt-3">
	@* <a href="/Work/EditWork/@Model.workInfo.id" class="btn btn-outline-warning mx-2">Düzenle</a> *@
	<a href="/Work/RemoveWorkOrder/@Model.id" class="btn btn-outline-danger mx-2">Sil</a>
</div>



