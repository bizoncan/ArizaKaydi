		/* Dropdown menüdeki elemanların hover rengini değiştirme */

		/* Select2 Özelleştirmeleri */
		.select2-container--bootstrap4 .select2-selection {
			height: calc(2.25rem + 2px) !important;
			padding: 0.375rem 0.75rem !important;
			font-size: 1rem !important;
			line-height: 1.5 !important;
			border: 1px solid #dc3545 !important;
			border-radius: 0.75rem !important;
			background-color: #fff !important;
			color: #333 !important;
			font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif !important;
			/* Sayfanın genel font ailesi */
		}

		.select2-container--bootstrap4 .select2-selection--single {
			height: calc(2.25rem + 2px) !important;
			position: relative !important;
		}

			.select2-container--bootstrap4 .select2-selection--single .select2-selection__rendered {
				line-height: 1.5 !important;
				padding-left: 0 !important;
				color: #333 !important;
				padding-right: 60px !important;
				display: block;
				white-space: nowrap;
				overflow: hidden;
				text-overflow: ellipsis;
				box-sizing: border-box;
				font-size: 14px !important;
			/* Yazı boyutu güncellendi */
			font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif !important;
			/* Yazı tipi eklendi */
			}

			.select2-container--bootstrap4 .select2-selection--single .select2-selection__arrow {
				height: 100% !important;
				width: 30px !important;
				/* Ok ikonunun tıklama alanını genişlet */
				position: absolute;
				top: 0;
				right: 0;
			}

				.select2-container--bootstrap4 .select2-selection--single .select2-selection__arrow b {
					display: none !important;
					/* Varsayılan Bootstrap okunu gizle */
				}

				.select2-container--bootstrap4 .select2-selection--single .select2-selection__arrow::after {
					font-family: 'Material Design Icons';
					content: "\F0140";
					/* mdi-chevron-down */
					font-size: 22px;
					/* İkon boyutunu ayarla */
					color: #dc3545;
					/* Tema kırmızısı */
					position: absolute;
					top: 50%;
					left: 50%;
					/* Kendi container'ına göre ortala */
					transform: translate(-50%, -50%);
					transition: transform 0.2s ease-in-out;
				}

		.select2-container--bootstrap4.select2-container--open .select2-selection--single .select2-selection__arrow::after {
			transform: translate(-50%, -50%) rotate(180deg);
			/* mdi-chevron-up gibi görünmesi için döndür */
		}

