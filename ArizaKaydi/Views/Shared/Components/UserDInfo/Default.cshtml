@model EntityLayer.Concrete.panelUser
<style>
    .user-dropdown-list {
        max-height: 300px;
        overflow-y: auto;
    }

    .user-dropdown-item {
        background-color: #fff !important;
        background-image: none !important;
        border-left: 4px solid #dc3545;
        border-radius: 0.75rem;
        padding: 0.75rem 1rem;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
    }

        .user-dropdown-item:hover {
            background-color: rgba(220, 53, 69, 0.1) !important;
            background-image: none !important;
        }

    .user-dropdown-icon {
        background: #dc3545;
        color: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 2.5rem;
        height: 2.5rem;
    }

        .user-dropdown-icon .mdi {
            font-size: 1.3rem;
        }

    .user-dropdown-content-title {
        color: #dc3545;
        font-weight: 500;
        margin-bottom: 0.2rem;
    }

    .user-dropdown-content-muted {
        color: #6c757d !important;
    }

    .user-dropdown-divider {
        border-top: 1px solid rgba(220, 53, 69, 0.2);
        margin: 0.5rem 0;
    }
</style>

<li class="nav-item dropdown">
    <a class="nav-link" id="profileDropdown" href="#" data-toggle="dropdown">
        <div class="navbar-profile">
            <img class="img-xs rounded-circle" src="assets/images/faces/face15.jpg" alt="">
            <p class="mb-0 d-none d-sm-block navbar-profile-name">@Model.UserName</p>
            <i class="mdi mdi-menu-down d-none d-sm-block"></i>
        </div>
    </a>
    <div class="dropdown-menu dropdown-menu-right navbar-dropdown user-dropdown-list" aria-labelledby="profileDropdown">
        <h6 class="p-3 mb-0">Profile</h6>
        <div class="user-dropdown-divider"></div>

        <a class="dropdown-item user-dropdown-item">
            <div class="preview-thumbnail">
                <div class="user-dropdown-icon rounded-circle">
                    <i class="mdi mdi-settings text-white"></i>
                </div>
            </div>
            <div class="preview-item-content">
                <p class="user-dropdown-content-title mb-1">Ayarlar</p>
            </div>
        </a>

        <div class="user-dropdown-divider"></div>

        <a class="dropdown-item user-dropdown-item" href="/Login/LogOut">
            <div class="preview-thumbnail">
                <div class="user-dropdown-icon rounded-circle">
                    <i class="mdi mdi-logout text-white"></i>
                </div>
            </div>
            <div class="preview-item-content">
                <p class="user-dropdown-content-title mb-1">Çıkış Yap</p>
            </div>
        </a>

        <div class="user-dropdown-divider"></div>
        <p class="p-3 mb-0 text-center">Advanced settings</p>
    </div>
</li>
